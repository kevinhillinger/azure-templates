{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string",
      "metadata": {
        "description": "Name of Azure Function App"
      }
    },
	"servicePlanName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Service Plan"
      }
    }
  },
  "variables": {
    "funcSiteName": "[parameters('siteName')]",
	"appServicePlanName": "WestFunctionPlanAZRIL303",
	"appServicePlanWorkerSize": 0
  },
  "resources": [
    {
      "apiVersion": "2015-04-01",
      "name": "[variables('appServicePlanName')]",
      "type": "Microsoft.Web/serverfarms",
	  "sku": {
		"name": "S1",
		"tier": "Standard",
		"size": "S1",
		"family": "S",
		"capacity": 1
	  },
	  "kind": "app",
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[variables('appServicePlanName')]",
        "workerSize": "[variables('appServicePlanWorkerSize')]",
        "numberOfWorkers": 1
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[variables('funcSiteName')]",
      "type": "Microsoft.Web/sites",
	  "kind": "functionapp",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      ],
      "properties": {
        "name": "[variables('funcSiteName')]",
        "serverFarmId": "[variables('appServicePlanName')]"
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "web",
          "type": "config",
          "dependsOn": [
            "[resourceId(resourceGroup().name, 'Microsoft.Web/sites', variables('funcSiteName'))]"
          ],
          "properties": {
            "phpVersion": "off",
            "netFrameworkVersion": "v4.5",
            "use32BitWorkerProcess": true,
            "webSocketsEnabled": false,
            "alwaysOn": true,
            "requestTracingEnabled": true,
            "httpLoggingEnabled": true,
            "logsDirectorySizeLimit": 40,
            "detailedErrorLoggingEnabled": true,
			"handlerMappings": [
				{ 
					"Extension": "Arguments",
					"ScriptProcessor": "D:\\home\\Python35\\wfastcgi.py"
				},
				{ 
					"Extension": "Extension",
					"ScriptProcessor": "fastCgi"
				},
				{ 
					"Extension": "ScriptProcessor",
					"ScriptProcessor": "D:\\home\\Python35\\python.exe"
				}
			]
          }
        },
		{
			"name": "appsettings",
			"type": "config",
			"apiVersion": "2015-08-01",
			"tags": {
				"displayName": "WebAppSettings"
			},
			"properties": {
				"FUNCTIONS_EXTENSION_VERSION": "~1",
				"WEBSITE_NODE_DEFAULT_VERSION": "6.5.0"
			},
			"dependsOn": [
				"[resourceId(resourceGroup().name, 'Microsoft.Web/sites', variables('funcSiteName'))]"
			]
		},
		{
			"apiVersion": "2015-08-01",
			"name": "python352x86",
			"type": "siteextensions",
			"properties": { },
			"dependsOn": [ 
				"[resourceId(resourceGroup().name, 'Microsoft.Web/sites', variables('funcSiteName'))]" 
			]
		}
      ]
    }
  ]
}
